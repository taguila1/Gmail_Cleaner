{
  "manifest_version": 3,
  "name": "Gmail Cleaner",
  "version": "1.0.0",
  "description": "Automatically unsubscribe from emails and intelligently clean up your Gmail inbox",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "onboarding/onboarding.html",
        "privacy/privacy.html",
        "assets/icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Gmail Cleaner",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "commands": {
    "unsubscribe-current": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Unsubscribe from current email"
    },
    "process-emails": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Process emails (preview mode)"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma",
        "mac": "Command+Shift+Comma"
      },
      "description": "Open Gmail Cleaner settings"
    }
  }
}

